<%- include header2 %>


<%if(login&&root==1){%>
<article class="upload-page edit-course">
	<div class="upload-box edit-course-box">
		<h3>邮筒网课程管理系统</h3>
		<ul>

		<% courses.forEach(function(course){%>
			<li class="course-edit-item clearfix">
				<div class="img-box">
					<a href="/course/<%- course._id%>"><img src="<%- course.courseImg %>" alt="课程图片"></a>
				</div>
				<div class="course-info">
					<h2>课程：<%- course.title%></h2>
					<p class='teacher'>
						老师：<%- course.teacher.name %>
					</p>
					<span class="addTime">
						上传于:<%- course.addTime.day%>
					</span>
					<% if(course.lastModified){ %>
					<span class="lastEditTime">
						最后编辑时间:<%- course.lastModified.getDay()%>
					</span>
					<% }else{ %>
						<span class="lastEditTime">
						最后编辑时间:<%- course.addTime.minute%>
					</span>

					<% } %>

				</div>
				<div class="edit-btn">
					<a href="/admin/editCourseInfo/<%- course._id%>" id="editInfoBtn">编辑信息</a>
					<a href="/admin/uploadVideo/<%- course._id%>" id="uploadVideoBtn">上传视频</a>
				</div>
			</li>
		<%})%>

		</ul>
	</div>
</article>
<%- include page %>
<% }else{ %>
<article class="upload-page">
	<div>没有权限！</div>
</article>
<% } %>

<%- include footer %>