<%- include header2 %>

<%if(login&&root==1){%>
<article class="upload-page">
	<div class="upload-box">
		<h3>邮筒网课程上传系统</h3>
		<form action="/admin/upload" method='POST' class='upload-form' enctype='multipart/form-data' multiple>
			<div class="upload-title">
				<label for="upload-title">课程标题</label>
				<div>
					<input id='upload-title' type="text" name="title" value=''>
				</div>
			</div>
			<div class="upload-img">
				<label for="upload-img">课程图片</label>
				<div>
					<input id='upload-img' type="file" name="img" value='上传背景课程图片'>
				</div>
			</div>
			<div class="upload-teacher">
				<label for="upload-teacher">教师姓名</label>
				<div>
					<input id='upload-teacher' type="text" name="teacherName" value=''>
				</div>
				<label for="upload-teacherId">教师Id</label>
				<div>
					<input id='upload-teacherId' type="text" name="teacherId" value=''>
				</div>
				<label for="upload-teacherIntro">教师简介</label>
				<div>
					<textarea maxlength="140" placeholder="简介请不超过140个字" name="teacherIntro" id="upload-teacherIntro" cols="30" rows="10"></textarea>
				</div>
			</div>

			<div class="upload-direction">
				<label for="upload-direction">课程方向</label>
				<div>
					<select id='upload-direction' name="courseDirection" value="">
						<% list.forEach(function(item){%>

							<option value="<%- item.dire%>"><%- item.dire%></option>
						<%})%>
					</select>
					<!-- <input id='upload-direction' type="text" name="courseDirection"> -->
				</div>
			</div>
			<div class="upload-difficulty">
				<label for="upload-difficulty">课程科目(子)</label>
				<div>
					<select id='upload-difficulty' name="courseDifficulty" value="">
						<% child.forEach(function(item){%>

							<option value="<%- item%>"><%- item%></option>
						<%})%>
					</select>
					<!-- <input id='upload-difficulty' type="text" name="courseDifficulty"> -->
				</div>
			</div>
			<input class="upload-btn" type="submit" value="上传课程基本信息">

		</form>
	</div>
</article>
<% }else{ %>
<article class="upload-page">
	<div>没有权限！</div>
</article>
<% } %>
<%- include footer %>